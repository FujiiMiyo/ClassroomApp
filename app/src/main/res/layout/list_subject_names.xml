<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_subject_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/textSubjectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="l01237406"
        android:textColor="@color/grey3"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:layout_alignParentRight="true"
        android:text="Date"
        android:textColor="@color/grey"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSubjectId"
        android:layout_alignStart="@+id/textSubjectId"
        android:layout_below="@+id/textSubjectId"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="70dp"
        android:paddingRight="10dp"
        android:text="OBJECT-ORIENTED PROGRAMMING"
        android:textColor="@color/grey2"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_trash"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />


</RelativeLayout>