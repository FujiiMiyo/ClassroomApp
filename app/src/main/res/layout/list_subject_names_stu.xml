<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_subject_id_stu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/textSubjectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="l01237406"
        android:textColor="@color/grey3"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textSubjectId"
        android:layout_alignStart="@+id/textSubjectId"
        android:layout_below="@+id/textSubjectId"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="80dp"
        android:paddingRight="10dp"
        android:text="OBJECT-ORIENTED PROGRAMMING"
        android:singleLine="true"
        android:textColor="@color/grey2"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_select_menu1"/>


</RelativeLayout>